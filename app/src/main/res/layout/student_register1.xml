<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    tools:context=".UI.StudentRegister1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="501dp"
        android:layout_height="144dp"
        android:layout_marginEnd="-35dp"
        android:layout_marginBottom="588dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/shapka_student" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="103dp"
        android:layout_height="267dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="316dp"
        android:src="@drawable/fon3_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="105dp"
        android:layout_height="212dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/fon3_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="329dp"
        android:layout_height="169dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="572dp"
        android:src="@drawable/fon3_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="221dp"
        android:layout_height="71dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="476dp"
        android:backgroundTint="@color/Background_blue"
        android:text="Зарегистрироваться"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="407dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="204dp"
        android:ems="10"
        android:hint="Номер телефона:"
        android:inputType="text"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="407dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="268dp"
        android:ems="10"
        android:hint="Пароль:"
        android:inputType="text"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="407dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="332dp"
        android:ems="10"
        android:hint="Повторите пароль:"
        android:inputType="text"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>